<div class="min-h-screen flex items-center justify-center p-4">
  <div class="max-w-md w-full text-center">
    <h1 class="text-6xl font-bold text-gray-800 mb-4">422</h1>
    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Unprocessable Entity</h2>
    <p class="text-gray-600 mb-6">The change you wanted was rejected.</p>

    <% if @event_id.present? %>
      <div class="bg-gray-100 border border-gray-300 rounded-lg p-4 mb-6">
        <p class="text-sm text-gray-700 mb-2">Error ID:</p>
        <code
          class="error-id-code text-sm font-mono bg-white px-3 py-2 rounded border border-gray-300 cursor-pointer hover:bg-gray-50 inline-block"
          data-error-id="<%= @event_id %>"
          onclick="copyErrorId(this)"
          title="Click to copy"
        >
          <%= @event_id %>
        </code>
        <span class="copy-feedback text-green-600 text-sm ml-2 hidden">âœ“ Copied!</span>
      </div>
    <% end %>

    <%= link_to "Go back home", root_path, class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition" %>
  </div>
</div>
