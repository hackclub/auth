<% content_for(:portal_wrapper, true) %>
<div class="container-sm">
  <div class="page-header-centered">
    <h1><%= t("portal.addresses.title") %></h1>
    <p><%= t("portal.addresses.subtitle") %></p>
    <p class="text-muted"><small><%= t("portal.addresses.note_html") %></small></p>
  </div>

  <div class="page-sections">
    <section class="section-card address-form">
      <%= render "addresses/form", address: @address, submit: t("portal.addresses.submit"), url: portal_address_path, from_program: true %>
    </section>
  </div>
</div>
