<div class="webauthn-credential-card">
  <div class="webauthn-credential-header">
    <div class="webauthn-credential-icon">
      <%= inline_icon("fingerprint", size: 32) %>
    </div>
    <div class="webauthn-credential-info">
      <div class="webauthn-credential-name">
        <%= identity_webauthn_credential.display_name %>
      </div>
      <div class="webauthn-credential-created">
        <%= t("identity_webauthn_credentials.added") %> <%= time_ago_in_words(identity_webauthn_credential.created_at) %> ago
      </div>
    </div>
  </div>

  <button class="danger small-btn"
          hx-delete="<%= identity_webauthn_credential_path(identity_webauthn_credential) %>"
          hx-target="#webauthn-credentials-container"
          hx-confirm="<%= t("identity_webauthn_credentials.remove_confirmation") %>">
    <%= t("identity_webauthn_credentials.remove") %> <%= inline_icon("delete", size: 16) %>
  </button>
</div>
