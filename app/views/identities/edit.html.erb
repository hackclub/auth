<div class="page-header">
  <h1><%= t ".title" %></h1>
</div>

<div style="margin-bottom: 1.5rem;">
  <h3><%= t ".info_heading" %></h3>
</div>

<%= form_with model: @identity, url: identity_path, method: :patch, local: true do |f| %>
  <% if @identity.errors.any? %>
    <div class="banner danger" aria-live="polite">
      <h4 style="color: var(--error-fg);"><%= pluralize(@identity.errors.count, "issue") %> prevented this from being saved:</h4>
      <ul>
        <% @identity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid">
    <div>
      <%= f.label :first_name, t("identities.first_name") %>
      <%= f.text_field :first_name, required: true, placeholder: t("identities.fiona") %>
    </div>

    <div>
      <%= f.label :last_name, t("identities.last_name") %>
      <%= f.text_field :last_name, required: true, placeholder: t("identities.hackworth") %>
    </div>
  </div>

  <% if @identity.legal_first_name.present? && @identity.legal_last_name.present? %>
    <div class="banner info" style="margin-top: 1rem;">
      <%= t ".legal_name_exists" %>
    </div>
  <% end %>

  <div style="margin-top: 1.5rem; display: flex; gap: 1rem; align-items: flex-start;">
    <%= f.submit t(".save"), style: "width: auto; margin: 0;" %>
  </div>
<% end %>

<div style="margin-top: 1.5rem;">
  <label><%= t "identities.email" %></label>
  <%= text_field_tag :primary_email, @identity.primary_email, readonly: true %>
  <small class="usn"><%= t ".no_email_change_yet" %></small>
</div>
