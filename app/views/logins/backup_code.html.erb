<div class="auth-container">
  <div class="auth-card">
    <header>
      <h1>Enter backup code</h1>
      <small>Use one of your backup codes to sign in</small>
    </header>
    
    <%= form_with url: verify_backup_code_login_attempt_path(@attempt), method: :post, local: true do |form| %>
      <%= hidden_field_tag :return_to, params[:return_to] if params[:return_to].present? %>
      <fieldset>
        <%= form.label :code, "Backup code" %>
        <%= form.text_field :code, 
            required: true, 
            autofocus: true, 
            autocomplete: "off",
            placeholder: "XXXX-XXXX-XXXX" %>
      </fieldset>
      <%= form.submit "Verify â†’" %>
    <% end %>
    
    <% if @attempt.totp_available? %>
      <footer>
        <p>
          <%= link_to "Use authenticator app instead", totp_login_attempt_path(@attempt, return_to: params[:return_to]) %>
        </p>
      </footer>
    <% end %>
  </div>
</div>

