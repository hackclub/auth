<div class="auth-container">
  <div class="auth-card">
    <header>
      <h1>Welcome back!</h1>
      <small>Sign in to your Hack Club Account</small>
    </header>
    
    <%= form_with url: login_path, method: :post, local: true do |form| %>
      <%= hidden_field_tag :return_to, params[:return_to] if params[:return_to].present? %>
      <fieldset>
        <%= form.label :email, "Email address" %>
        <%= form.email_field :email, required: true, value: @prefill_email, autofocus: true, placeholder: "you@example.com", autocomplete: "email" %>
      </fieldset>
      <%= form.submit "Continue â†’" %>
    <% end %>
    
    <footer>
      <p>
        Don't have an account?
        <%= link_to "Make one", signup_path %>, it's free!
      </p>
    </footer>
  </div>
</div>


