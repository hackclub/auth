<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<% if @addresses.any? %>
  <div class="page-sections" id="addresses-list">
    <%= render "addresses/address_list", addresses: @addresses, address: @address, portal: false %>
  </div>
<% else %>
  <div class="empty-state">
    <div class="empty-icon"><%= inline_icon("email", size: 48) %></div>
    <h3><%= t ".blank_slate.title" %></h3>
    <p><%= t ".blank_slate.cta" %></p>
    <%= link_to t(".blank_slate.create"), new_address_path, role: "button" %>
  </div>
<% end %>
